<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="toolbarStyle">@style/AppTheme.Toolbar</item>
        <item name="colorControlNormal">@color/color_control_normal</item>
        <item name="actionMenuTextColor">@color/color_action_menu</item>
        <item name="android:actionMenuTextColor">@color/color_action_menu</item>
        <item name="actionMenuTextAppearance">@style/MenuTextAppearance</item>
        <item name="android:actionMenuTextAppearance">@style/MenuTextAppearance</item>
        <item name="android:textColorPrimary">@color/color_text_primary</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.Toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:background">@color/toolbar_background_color</item>
        <item name="colorControlNormal">@color/toolbar_icon_color</item>
        <item name="android:textColor">@color/toolbar_text_color</item>
        <item name="android:textColorSecondary">@color/toolbar_text_color</item>
        <item name="android:actionMenuTextColor">@color/toolbar_text_color</item>
    </style>

    <style name="MenuTextAppearance" parent="android:TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.DialogStyle" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <!-- Splash Screen theme. -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
    </style>

</resources>
